    function loadlib($dll) {
        if (file_exists($dll)) {
            echo "<!-- $dll Start -->";
            require($dll);
            echo "<!-- $dll End   -->";
        }            
        else {
            echo "Fatal: $dll Not Found!\n";
            exit;
        }
    }
    
